{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --ignore-platform-reqs"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "vendor/bin/heroku-php-apache2",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}